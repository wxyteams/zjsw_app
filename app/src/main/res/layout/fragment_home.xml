<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        app:columnCount="2"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:rowCount="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_1"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/liuliangji" />

            <TextView
                android:id="@+id/tv_h_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="LLJ1252：53m³/h" />

            <ImageView
                android:id="@+id/iv_h_101"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/gao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_2"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/yali" />

            <TextView
                android:id="@+id/tv_h_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="YLJ542：12MPa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_3"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/dianbiao" />

            <TextView
                android:id="@+id/tv_h_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="DNB2313：23kw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_4"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/dianbiao" />

            <TextView
                android:id="@+id/tv_h_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="WDJ176:26℃" />

            <ImageView
                android:id="@+id/iv_h_401"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/di" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_5"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/liuliangji" />

            <TextView
                android:id="@+id/tv_h_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="LLJ1252：23m³/h" />

            <ImageView
                android:id="@+id/iv_h_501"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/di" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:id="@+id/iv_h_6"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/yali" />

            <TextView
                android:id="@+id/tv_h_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:text="YLJ542：32MPa" />

            <ImageView
                android:id="@+id/iv_h_601"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:src="@drawable/gao" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/home_tl_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="270dp"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        tools:ignore="MissingConstraints">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp_content"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="310dp"
        app:layout_constraintTop_toBottomOf="@+id/home_tl_tab"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


</FrameLayout>